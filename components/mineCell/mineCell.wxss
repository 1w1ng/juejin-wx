/* components/mineCell/mineCell.wxss */
.item {
  height: 90rpx;
  padding: 0 40rpx;
  border-top: 1rpx solid #efefef;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item .title {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  display: flex;
  align-items: center;
}

.item image {
  width: 42rpx;
  height: 42rpx;
  margin-right: 40rpx;
}

.item .count {
  font-size: 24rpx;
  color: #abb4bf;
}

.hover-class {
  background: #f2f2f2 !important;
}
